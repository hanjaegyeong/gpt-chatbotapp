<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 말풍선의 외곽선 -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#9073C3" /> <!-- 연보라색으로 설정 (#9C27B0) -->
            <corners android:radius="8dp" />
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp" /> <!-- 외곽선 크기를 조절합니다 -->
        </shape>
    </item>
    <!-- 말풍선 내부의 색상 -->
    <item
        android:left="0.4dp"
        android:right="0.4dp"
        android:top="0.4dp"
        android:bottom="0.4dp"
    >
    <shape
        android:shape="rectangle">
        <solid android:color="#FFFFFF" />
        <corners android:radius="8dp" />
    </shape>
</item>
    </layer-list>
